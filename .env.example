# Media Scorer Docker Configuration
# Copy this file to .env and customize for your setup

# Path to your media files on the NAS
MEDIA_PATH=/media
HOST_MEDIA_PATH=/share/sd/SecretFolder

# Port to expose (default: 7862)
HOST_PORT=7862

# User/Group IDs for NAS file access (usually 0 for admin access)
PUID=0
PGID=0

# Media patterns to scan
MEDIA_PATTERN="*.mp4|*.png|*.jpg"

# Enable thumbnail generation
GENERATE_THUMBNAILS=true

# Database configuration
POSTGRES_DB=media_scoring
POSTGRES_USER=media_user
POSTGRES_PASSWORD=media_password
POSTGRES_PORT=5432

# Database URL (automatically constructed from above variables)
# DATABASE_URL=postgresql://media_user:media_password@postgres:5432/media_scoring